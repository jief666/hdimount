#!/bin/bash
SCRIPT_ABS_FILENAME=`LC_ALL=en_US.ISO8859-1 perl -e 'use Cwd "abs_path";print abs_path(shift)' "${BASH_SOURCE[0]}"`
SCRIPT_DIR=`dirname "$SCRIPT_ABS_FILENAME"`

#echo `pwd`

me=`basename "$0"`
#echo me=$me

name="${me##*-}"
#echo name=$name

prefix=${me%-$name}
#echo prefix=$prefix

source "$SCRIPT_DIR"/"$prefix"-path "clang++" #we use clang++ as a linker, so let's ignore $name
ps_dir="$SCRIPT_DIR"/../jief_build_scripts_project_specific


cmdArgs=()
cmdArgs=( "$bin_path"  $("$ps_dir"/"$prefix"-ldflags) "$@" )

echo "${cmdArgs[@]}"

exec "${cmdArgs[@]}"
